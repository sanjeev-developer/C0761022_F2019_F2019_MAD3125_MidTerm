<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/ll_dashtotal"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="5dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight=".2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/novaregular"
                    android:gravity="start"
                    android:text="Name  "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_weight=".8"
                    android:layout_width="0dp"
                    android:id="@+id/text_name"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/novaregular"
                    android:gravity="end"
                    android:text="Sanjeev"
                    android:textColor="@color/black"
                    android:textSize="16sp" />



            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight=".2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/novaregular"
                    android:gravity="start"
                    android:text="Age"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_weight=".8"
                    android:layout_width="0dp"
                    android:id="@+id/text_age"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/novaregular"
                    android:gravity="end"
                    android:text="20"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight=".2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/novaregular"
                    android:gravity="start"
                    android:text="Vehicle"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_weight=".8"
                    android:layout_width="0dp"
                    android:id="@+id/txt_vstatus"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/novaregular"
                    android:gravity="end"
                    android:text="No"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:id="@+id/ll_alert_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/buttonbackk"
                android:gravity="center">

                <LinearLayout
                    android:layout_margin="5dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/novaregular"
                        android:gravity="start"
                        android:text="Company  "
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_weight=".8"
                        android:layout_width="0dp"
                        android:id="@+id/text_vcompany"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/novaregular"
                        android:gravity="end"
                        android:text="Honda"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/novaregular"
                        android:gravity="start"
                        android:text="Year  "
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_weight=".8"
                        android:layout_width="0dp"
                        android:id="@+id/text_vyear"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/novaregular"
                        android:gravity="end"
                        android:text="2019"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_margin="5dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight=".2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/novaregular"
                        android:gravity="start"
                        android:text="Model  "
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_weight=".8"
                        android:layout_width="0dp"
                        android:id="@+id/text_vmodel"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/novaregular"
                        android:gravity="end"
                        android:text="BMW124f"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>