<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">




    <LinearLayout
        android:gravity="center"
        android:background="@color/btn_grey"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">


            <TextView
                android:textSize="18dp"
                android:textColor="@color/dock"
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:gravity="center"
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helli"
                android:gravity="center"
                android:text="Login"
                android:visibility="gone"
                android:textColor="@color/dock"
                android:textSize="40dp" />



            <ImageView
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/appicon" />

            <TextView
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helli"
                android:gravity="center"
                android:text="MidTerm"
                android:textColor="@color/dock"
                android:textSize="40dp" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:fontFamily="@font/novabold"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/login_email"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_bc"
                android:padding="12dp"
                android:textSize="13dp"
                android:maxLength="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="enter the username" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:fontFamily="@font/novabold"
                android:textColor="@color/black"
              />

            <EditText
                android:id="@+id/login_password"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_bc"
                android:padding="13dp"
                android:textSize="12dp"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:maxLength="16"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:hint="enter the password"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:weightSum="1"
                android:gravity="top"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

            <Button
                android:id="@+id/but_login"
                android:background="@drawable/curve_blue"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:text="Login"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_height="45dp" />



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>









</LinearLayout>